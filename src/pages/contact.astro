---
import Navbar from "../components/Navbar.astro";
import Contactaf from "../components/Contactaf.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/merriweather";
import { ViewTransitions } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact Us</title>
    <ViewTransitions />
  </head>
  <body>
    <header>
      <Navbar />
    </header>

    <main>
      <section class="bg-gray-50">
        <div
          class="justify-center items-center flex-1 max-w-screen-2xl px-6 p-6 mx-auto mt-24 text-center font-poppins"
        >
          <div class="px-4 mt-24 pt-6 text-center">
            <h1 class="pb-2 text-2xl font-bold text-gray-800 md:text-4xl">
              Contact Us
            </h1>
            <div
              class="flex w-32 mt-1 mb-6 overflow-hidden rounded mx-auto md:mb-14"
            >
              <div class="flex-1 h-2 bg-secondaryhover"></div>
              <div class="flex-1 h-2 bg-secondary"></div>
              <div class="flex-1 h-2 bg-secondaryhover"></div>
            </div>
          </div>
        </div>
      </section>
      <Contactaf />
    </main>
    <Footer />
  </body>
</html>
