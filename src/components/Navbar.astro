---
import "../styles/global.css";
---

<nav class="fixed top-0 left-0 z-50 w-full bg-white border-b border-gray-200">
  <div
    class="flex flex-wrap items-center justify-between max-w-screen-xl px-4 mx-auto py-4"
  >
    <a href="/" class="flex items-center space-x-3">
      <img src="/logo.png" alt="Logo" class="h-20" />
    </a>

    <div class="flex space-x-3 md:order-2">
      <a
        href="tel:+919876407769"
        class="bg-primary text-white hover:bg-primaryhover font-medium rounded-lg text-sm px-4 py-2"
      >
        Call Us
      </a>

      <button
        id="hamburger"
        type="button"
        class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      >
        <span class="sr-only">Open menu</span>
        <svg
          class="w-5 h-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div
      class="hidden justify-between mt-4 space-y-4 md:mt-0 md:flex md:space-y-0 md:space-x-8 md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="navigation flex flex-col font-medium bg-gray-50 rounded-lg md:bg-transparent md:flex-row md:space-x-8 md:border-0"
      >
        <li>
          <a
            href="/"
            class="block rounded bg-secondary py-2 px-3 md:bg-transparent active:text-secondary"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block rounded py-2 px-3 text-gray-700 hover:bg-gray-100 md:hover:bg-transparent md:border-0 active:text-secondary"
            >About</a
          >
        </li>
        <li>
          <button
            id="dropdownNavbarLink"
            data-dropdown-toggle="dropdownNavbar"
            class="flex items-center w-full py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:w-auto md:hover:bg-transparent md:border-0 active:text-secondary"
          >
            Services
            <svg
              class="w-2 h-2 ms-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <div
            id="dropdownNavbar"
            class="z-10 hidden divide-y divide-gray-100 rounded-lg bg-white shadow w-44"
          >
            <ul aria-labelledby="dropdownLargeButton">
              <li>
                <a
                  href="/aviation-maintenance-support"
                  class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                  >Aviation Maintenance Support</a
                >
              </li>
              <li>
                <a
                  href="/all-about-food"
                  class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
                  >All About Food</a
                >
              </li>
            </ul>
          </div>
        </li>
        <li>
          <a
            href="/contact"
            class="block rounded py-2 px-3 text-gray-700 hover:bg-gray-100 md:hover:bg-transparent md:border-0 active:text-secondary"
            >Contact</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
<div id="mobile-menu" class="hidden text-center md:hidden mt-24">
  <ul
    class="navigation flex flex-col font-medium rounded-lg md:bg-transparent md:flex-row md:space-x-8 md:border-0"
  >
    <li>
      <a
        href="/"
        class="block rounded py-2 px-3 text-gray-700 active:text-secondary md:bg-transparent"
        >Home</a
      >
    </li>
    <li>
      <a
        href="/about"
        class="block rounded py-2 px-3 text-gray-700 hover:bg-gray-100 md:hover:bg-transparent md:border-0 active:text-secondary"
        >About</a
      >
    </li>
    <li>
      <button
        id="mobileDropdownNavbarLink"
        data-dropdown-toggle="mobileDropdownNavbar"
        class="flex items-center justify-center w-full py-2 px-3 text-gray-700 rounded hover:bg-gray-100 md:w-auto md:hover:bg-transparent md:border-0 active:text-secondary"
      >
        Services
        <svg
          class="w-2 h-2 ms-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <div
        id="mobileDropdownNavbar"
        class="z-10 hidden divide-y divide-gray-100 rounded-lg text-center bg-white shadow"
      >
        <ul aria-labelledby="dropdownLargeButton">
          <li>
            <a
              href="/aviation-maintenance-support"
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 active:text-secondary"
              >Aviation Maintenance Support</a
            >
          </li>
          <li>
            <a
              href="/all-about-food"
              class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
              >All About Food</a
            >
          </li>
        </ul>
      </div>
    </li>
    <li>
      <a
        href="/contact"
        class="block rounded py-2 px-3 text-gray-700 hover:bg-gray-100 md:hover:bg-transparent md:border-0 active:text-secondary"
        >Contact</a
      >
    </li>
  </ul>
</div>
<script is:inline>
  const hamburger = document.getElementById("hamburger");
  const mobileMenu = document.getElementById("mobile-menu");

  hamburger.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
  const dropdownButton = document.querySelector("#dropdownNavbarLink");
  const dropdownMenu = document.querySelector("#dropdownNavbar");
  dropdownMenu.style.position = "absolute";

  dropdownButton.addEventListener("click", () => {
    dropdownMenu.classList.toggle("hidden");
  });
  const mobileDropdownButton = document.querySelector(
    "#mobileDropdownNavbarLink"
  );
  const mobileDropdownMenu = document.querySelector("#mobileDropdownNavbar");

  mobileDropdownButton.addEventListener("click", () => {
    mobileDropdownMenu.classList.toggle("hidden");
  });

  // Active Link
  // Get all navigation links
  const navLinks = document.querySelectorAll("#navigation a");

  // Add an event listener to each link
  navLinks.forEach((link) => {
    link.addEventListener("click", (event) => {
      // Remove the 'active' class from all links
      navLinks.forEach((link) => link.classList.remove("active"));

      // Add the 'active' class to the clicked link
      event.target.classList.add("active");
    });
  });
</script>
